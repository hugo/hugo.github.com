{
  "version": 2,
  "alias": ["thisishugo.com", "thisishugo"],
  "github": {
    "enabled": true,
    "autoAlias": true
  },
  "build": {
    "env": {
      "NPM_RC": "~/.npmrc",
      "NODE_ENV": "production",
      "REMIX_TOKEN": "@remix-token"
    }
  },
  "public": false,
  "functions": {
    "api/index.js": {
      "includeFiles": "build/**"
    }
  },
  "routes": [
    {
      "src": "/",
      "headers": {
        "X-Frame-Options": "DENY",
        "X-XSS-Protection": "1; mode=block",
        "Content-Security-Policy": "default-src 'none'; script-src 'self'; style-src 'self'; img-src 'self' data:;",
        "Referrer-Policy": "strict-origin",
        "Strict-Transport-Security": "max-age=31536000; includeSubDomains; preload"
      }
    },
    {
      "src": "/(.*)",
      "headers": {
        "Strict-Transport-Security": "max-age=31536000; includeSubDomains; preload"
      },
      "continue": true
    },
    {
      "src": "/css/(.*)",
      "dest": "/public/css/(.*)",
      "headers": {
        "X-Content-Type-Options": "nosniff"
      },
      "continue": true
    },
    {
      "src": "/images/(.*)",
      "dest": "/public/images/(.*)",
      "headers": {
        "X-Content-Type-Options": "nosniff"
      },
      "continue": true
    },
    { "handle": "filesystem" },
    { "src": "/", "dest": "/api" }
  ]
}
